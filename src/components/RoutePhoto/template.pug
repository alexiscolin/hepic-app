shell-app
  .o-container.pl-1.pr-1
    .o-title.o-main.p-rel
      a(@click="$router.go(-1)").o-title.p-abs.d-flex.d-flex-vm.mt-05.cf-grey
        svg(viewBox="0 0 29.67 25.71").o-svg-btn.va-mid
          use(xlink:href="#ico-arrow")
      
      .p-abs.p-vhcenter-abs.w-100.f-center
        .o-width-container.d-inblock
          div(v-if="profile && (profile.id || profile.profile_id)").o-tile__infos--long.d-row-flex.d-flex-spacebet.d-flex-vm.pt-2.pb-1
            router-link(:to="'/user/' + profile.profile_id").no-link.d-row-flex.d-flex-spacebet.d-flex-vm 
              img(:src="profile.picture" alt="logo").o-tile__logo--long.b-1.brad-100.mt-neg025
              span.va-mid
                span.pl-1.f-stm.pr-1.f-grey {{ profile.name }}
                div(:class="{'o-ico-sprite--none': Number.isInteger(media.rank), 'o-ico-sprite--or': media.rank === 'gold', 'o-ico-sprite--argent': media.rank === 'silver', 'o-ico-sprite--bronze': media.rank === 'bronze'}").o-ico-sprite.o-ico-sprite--inline.va-mid.mt-neg025.f-center    
            a(@click="displayPopin" v-if="contest && contest.id").no-link
              span.o-more
                
          img(:src="media.file").o-plain-img.o-plain-img--large

    layer-popin(v-show="displayedPopin" v-if="contest && contest.id && profile")
      info-popin( @displayPopin="displayPopin" :photoData="photoData" :rank="media.rank") 
